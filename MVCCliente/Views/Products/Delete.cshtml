@model IEnumerable<Product>
@{
    Layout = "_Layout"; ViewBag.Title = "All Products";
}

<h2>All Reservations</h2>
<a asp-action="Create" class="btn btn-sm btn-primary">Create Product</a>
<a asp-action="Get" class="btn btn-sm btn-secondary">Get Product</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>@r.Description</td>
                <td>@r.Price</td>
                <td>
                    <a asp-action="Update" asp-route-id="@r.Id">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteProduct" method="post">
                        <input type="hidden" value="@r.Id" name="productId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>